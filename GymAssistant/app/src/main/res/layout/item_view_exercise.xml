<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/exercise_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/goal_reps_and_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal" />


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/set1_reps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/set1_reps"
            android:inputType="number" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/set1_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/set1_weight"
            android:inputType="number" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/set2_reps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/set2_reps"
            android:inputType="number" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/set2_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/set2_weight"
            android:inputType="number" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/set3_reps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/set3_reps"
            android:inputType="number" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/set3_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/set3_weight"
            android:inputType="number" />

    </android.support.design.widget.TextInputLayout>

</LinearLayout>